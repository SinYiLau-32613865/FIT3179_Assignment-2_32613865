{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 500,
    "height": 400,
    "data": {
    "url": "https://raw.githubusercontent.com/SinYiLau-32613865/FIT3179_Assignment-2_32613865/main/csvData.csv"
    },
  "params": [
          {
          "name": "Continent_selection",
          "bind": {
          "input": "select",
          "options": [
          null,
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
          ],
          "labels": [
          "Show All",
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
          ],
          "name": "Continent Selection: "
          }
          }
  ],
      "transform": [
      {
        "filter": "Continent_selection == null || datum.Continent == Continent_selection"
      },
      {"calculate": "1000*datum.pop2022", "as": "Population"}
      ],"encoding": {
              "x": {
              "field": "IQ",
              "type": "quantitative",
              "title": "IQ",
              "axis": {"tickCount": 7}},
          "y": {
              "field": "Population",
              "type": "quantitative",
              "axis": {"tickCount": 6},
              "title":"Population",
              "scale": {"type": "log"}
              }},
      "layer":[{
  "mark": "circle",
      "encoding": {
          "color": {
                "field": "Continent",
                "type": "nominal",
                "scale": {
                "domain": [
                "North America",
                "South America",
                "Europe",
                "Africa",
                "Asia",
                "Oceania"
                ],
                "range": [
                "#e41a1c",
                "#984ea3",
                "#ff7f00",
                "#a6cee3",
                "#377eb8",
                "#a65628"
                ]
                }
              },
          "tooltip": [
          {"field": "Continent", "type": "nominal"},
          {"field": "Country", "type": "nominal"},
          {"field": "IQ", "type": "quantitative"},
          {"field": "Population", "type": "quantitative","format":","}
     ]
    }},
          {
        "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx":-10,
        "fontSize": 11.5,
        "fontStyle": "italic"
        },
      "encoding": {
      "text": {"field": "Country", "type": "nominal"},
      "color": {"value": "black"},
      "opacity": {"condition": {
      "test": "datum['Country'] == 'China' || datum['Country'] =='India'","value": 1
      },
      "value": 0
      },
  "tooltip": [
          {"field": "Continent", "type": "nominal"},
          {"field": "Country", "type": "nominal"},
          {"field": "IQ", "type": "quantitative"},
          {"field": "Population", "type": "quantitative","format":","}
     ]        }
  
  
    }]
      
  }